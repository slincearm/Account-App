rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is approved
    function isApprovedUser() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true;
    }

    // Helper function to check if user is a member of a group
    function isMemberOfGroup(groupId) {
      return request.auth != null &&
             request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles (for display names, photos)
      allow read: if request.auth != null;

      // Users can only create their own document (handled by auth trigger)
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can update their own document, but cannot change approval status
      allow update: if request.auth != null &&
                       request.auth.uid == userId &&
                       request.resource.data.isApproved == resource.data.isApproved;

      // Only allow delete by the user themselves (optional, could be restricted)
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Groups collection
    match /groups/{groupId} {
      // Only approved users can read groups they are members of
      allow read: if isApprovedUser() &&
                     request.auth.uid in resource.data.members;

      // Only approved users can create groups, and they must be in the members list
      allow create: if isApprovedUser() &&
                       request.auth.uid in request.resource.data.members &&
                       request.resource.data.createdByUid == request.auth.uid;

      // Only group members can update the group
      // Prevent changing createdBy fields and ensure members array integrity
      allow update: if isApprovedUser() &&
                       request.auth.uid in resource.data.members &&
                       request.resource.data.createdByUid == resource.data.createdByUid &&
                       request.resource.data.createdByName == resource.data.createdByName;

      // Only group members can delete (or consider disallowing delete)
      allow delete: if isApprovedUser() &&
                       request.auth.uid in resource.data.members;

      // Expenses subcollection
      match /expenses/{expenseId} {
        // Only group members can read expenses
        allow read: if isApprovedUser() && isMemberOfGroup(groupId);

        // Only group members can create expenses
        // Ensure payerUid is the authenticated user or a member
        allow create: if isApprovedUser() &&
                         isMemberOfGroup(groupId) &&
                         request.resource.data.payerUid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        // Only the expense creator or group members can update
        allow update: if isApprovedUser() && isMemberOfGroup(groupId);

        // Only group members can delete expenses
        allow delete: if isApprovedUser() && isMemberOfGroup(groupId);
      }
    }
  }
}
